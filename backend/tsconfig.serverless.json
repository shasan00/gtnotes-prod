{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".build",
    "rootDir": "./",
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".build",
    "dist"
  ]
}
